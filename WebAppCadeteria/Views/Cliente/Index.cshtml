@{
}

@model IEnumerable<WebApp_Cadeteria.Models.ViewModels.ClienteViewModel>

<h1 class="display-4">Listado de Clientes</h1>
<a class="btn-info btn-success btn-lg" asp-action="CrearCliente">Crear Cliente</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "ModificarCliente", new { id = item.Id }) |
                    @Html.ActionLink("Borrar", "EliminarCliente", new { id = item.Id })
                </td>
    
            </tr>
        }
    </tbody>
</table>

